    "@storybook/addon-docs": "9.1.10",
    "@storybook/addon-vitest": "9.1.10",
    "@types/node": "24.6.2",
    "@types/react": "19.2.0",
    "@types/react-dom": "19.2.0",
    "eslint": "9.36.0",
    "eslint-config-next": "15.5.4",
    "eslint-plugin-storybook": "9.1.10",
    "storybook": "9.1.10",
    "typescript": "5.9.3",
    "@storybook/nextjs-vite": "9.1.10",
    "vitest": "3.2.4",
